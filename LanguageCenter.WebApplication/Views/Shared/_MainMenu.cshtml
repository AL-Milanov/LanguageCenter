@using LanguageCenter.Infrastructure.Data.Common
<nav class="mt-2">
    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
        <!-- Add icons to the links using the .nav-icon class
             with font-awesome or any other icon font library -->
        <li class="nav-item">
            <a href="/" class="nav-link active">
                <i class="far fa-circle nav-icon"></i>
                <p>Home</p>
            </a>
        </li>
        <li class="nav-item">
            <a href="#" class="nav-link active">
                <i class="nav-icon fas fa-book"></i>
                <p>
                    Courses
                    <i class="right fas fa-angle-left"></i>
                </p>
            </a>
            <ul class="nav nav-treeview">

                <li class="nav-item active">
                    <a asp-area="" asp-controller="Course" asp-action="All" class="nav-link main-menu-color">
                        <i class="fas fa-chalkboard-teacher nav-icon"></i>
                        <p>All courses</p>
                    </a>
                </li>

            </ul>
        </li>
        @if (User?.Identity?.IsAuthenticated ?? false)
        {
            <li class="nav-item">
                <a href="#" class="nav-link active">
                    <i class="fas fa-graduation-cap nav-icon"></i>
                    <p>Certificates</p>
                </a>
            </li>
            @if (User.IsInRole(Constraints.Role.Admin))
            {
                <li class="nav-item active">
                    <a asp-area="Admin" asp-controller="Admin" asp-action="Index" class="nav-link">
                        <i class="fas fa-user nav-icon"></i>
                        <p>Admin</p>
                    </a>
                </li>
            }
        }
    </ul>
</nav>