@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                <div class="card" style="border-radius: 15px;">
                    <div class="card-body p-5">
                        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <h2 class="text-uppercase text-center mb-5">Create an account</h2>
                            <div class="form-outline mb-4">
                                <label asp-for="Input.FirstName" class="form-label" for="form3Example1cg">Your First Name</label>
                                <input asp-for="Input.FirstName" type="text" id="form3Example1cg" class="form-control form-control-lg" />
                                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                            </div>
                            <div class="form-outline mb-4">
                                <label asp-for="Input.LastName" class="form-label" for="form3Example1cg">Your Last Name</label>
                                <input asp-for="Input.LastName" type="text" id="form3Example1cg" class="form-control form-control-lg" />
                                <span asp-validation-for="Input.LastName" class="text-danger"></span>
                            </div>
                            <div class="form-outline mb-4">
                                <label asp-for="Input.Email">Your Email</label>
                                <input asp-for="Input.Email" type="email" id="form3Example3cg" class="form-control form-control-lg" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-outline mb-4">
                                <label asp-for="Input.Password" class="form-label" for="form3Example4cg">Password</label>
                                <input asp-for="Input.Password" type="password" id="form3Example4cg" class="form-control form-control-lg" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-outline mb-4">
                                <label asp-for="Input.ConfirmPassword" class="form-label" for="form3Example4cdg">Repeat your password</label>
                                <input asp-for="Input.ConfirmPassword" type="password" id="form3Example4cdg" class="form-control form-control-lg" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                        </form>
                        <p class="text-center text-muted mt-5 mb-0">Have already an account? <a href="/Identity/Account/Login" class="fw-bold text-body"><u>Login here</u></a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

