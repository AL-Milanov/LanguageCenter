@model IEnumerable<LanguageCenter.Core.Models.TeacherModels.GetAllTeachersVM>

<p>
    <a asp-action="AddTeacher">Add teacher</a>
</p>

@if (Model.Count() == 0)
{
    <h2>No teachers yet.</h2>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="TeacherLanguages" asp-route-id="@item.Id">Add language to teacher</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
