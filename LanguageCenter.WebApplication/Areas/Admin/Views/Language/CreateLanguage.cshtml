@model LanguageCenter.Core.Models.LanguageModels.CreateLanguageVM

@{
    ViewData["Title"] = "CreateLanguage";
}

<h1>Create Language</h1>

<partial name="_MessagePartial" />

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateLanguage">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary" asp-action="AllLanguages" >Back to All Languages</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
