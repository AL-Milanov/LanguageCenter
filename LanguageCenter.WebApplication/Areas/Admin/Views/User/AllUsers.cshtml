@model IEnumerable<LanguageCenter.Core.Models.UserModels.UserVM>

@{
    ViewData["Title"] = "AllUsers";
}

<h1>All Users</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a asp-action="AddRole" asp-route-id="@item.Id" class="btn btn-primary">Add Role</a> |
                    <a class="btn btn-secondary" asp-controller="Admin" asp-action="Index">Back to admin panel</a>
                </td>
            </tr>
        }
    </tbody>
</table>
